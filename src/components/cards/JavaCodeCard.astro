---
import Prism from "prismjs";

const { title, code } = Astro.props;
const highlightedCode = Prism.highlight(code, Prism.languages.java, "java");
---

<article class="card animate-fade-slide-up">
  <h3 class="card-title">{title}</h3>
  <pre
    class="code-block"><code class="language-java" set:html={highlightedCode} /></pre>
</article>

<style>
  .card {
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px var(--glow-shadow-3);
    background: rgba(18, 18, 18, 0.95);
    border: 1px solid var(--glow-shadow-1);
    backdrop-filter: blur(10px);
    color: white;
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }

  .card-title {
    margin-bottom: 1rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, var(--purple1), var(--purple2));
    box-shadow: 0 4px 15px var(--purple-glow-soft);
    border-radius: 8px;
    font-weight: 600;
    font-size: clamp(1rem, 2vw, 1.25rem);
    text-align: center;
    flex-shrink: 0;
  }

  .code-block {
    background: #0a0a0a;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    flex: 1;
    text-align: start;
    min-height: 200px;
    max-height: 60vh;
    font-family: "SF Mono", Menlo, Consolas, monospace;
    font-size: clamp(0.75rem, 1.5vw, 0.9rem);
    line-height: 1.6;
    box-sizing: border-box;
  }

  @media (min-width: 640px) {
    .card {
      padding: 1.5rem;
    }

    .code-block {
      padding: 1.25rem;
      font-size: 0.85rem;
    }
  }

  @media (min-width: 1024px) {
    .code-block {
      max-height: 400px;
    }
  }

  @media (min-width: 1920px) {
    .code-block {
      max-height: 450px;
    }
  }
</style>
